<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/cover_placeholder"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:background="@color/secondaryTextColor"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/recipe_title_placeholder"
        android:layout_width="256dp"
        android:layout_height="28dp"
        android:layout_marginTop="32dp"
        android:background="@color/secondaryTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cover_placeholder" />

    <View
        android:id="@+id/recipe_category_placeholder"
        android:layout_width="128dp"
        android:layout_height="18dp"
        android:layout_marginTop="4dp"
        android:background="@color/secondaryTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recipe_title_placeholder" />

    <View
        android:id="@+id/details_holder"
        android:layout_width="196dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:background="@color/secondaryTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recipe_category_placeholder" />

    <LinearLayout
        android:id="@+id/tablayout_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/details_holder">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/featured_tab_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/TabTitle"
                android:text="@string/ingredients"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/steps"
                style="@style/TabTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tablayout_holder">

        <View
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="128dp"
            android:background="@color/secondaryTextColor"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <View
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/first"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="96dp"
            android:background="@color/secondaryTextColor"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <View
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/second"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@color/secondaryTextColor"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <View
            android:id="@+id/forth"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/third"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="256dp"
            android:background="@color/secondaryTextColor"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <View
            android:id="@+id/fifth"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/forth"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="64dp"
            android:background="@color/secondaryTextColor"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>